<div class="container" ng-app="main">
    <div class="row">
        <div class="col-md-12">
            <input type="text" class="form-control invisible"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label class="control-label" for="messagebox">
                Online Users
            </label>
        </div>
    </div>
    <div class="row" ng-controller="userlist">
        <div class="col-md-9">
            <select ng-model="selecteduser" ng-options="user for user in users" class="center-block form-control" size="10">
                <option value="">Select User</option>
            </select>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="text" class="form-control invisible"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <textarea class="messageDisplay center-block form-control" rows="30" cols="70" disabled=""></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="text" class="form-control invisible"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-3">
            <label class="control-label" for="messagebox">
                Message
            </label>
        </div>
        <div class="col-md-6">
            <textarea class="messageDisplay center-block form-control" rows="15" cols="50" disabled=""></textarea>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="text" class="form-control invisible"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-9">
            <button class="btn btn-primary center-block">Send</button>
        </div>
    </div>
</div>

