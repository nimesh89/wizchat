    <div class="row">
        <div class="col-md-12">
            <input type="text" class="form-control invisible"/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-5 panel">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label" for="usernamebox">User Name</label>
                </div>
                <div class="col-md-8">
                    <input class="form-control" id="usernamebox" type="text"/>
